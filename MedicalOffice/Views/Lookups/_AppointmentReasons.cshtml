<br />
<div class="card mb-sm-3" style="min-width: 18rem;">
    <h4 class="card-header" id="AppointmentReasons">Appointment Reasons</h4>
    <div class="card-body">
        @Html.DropDownList("AppointmentReasonsID", null, htmlAttributes: new { @size = 6, @class = "form-control" })
        <br />
        <form asp-action="InsertFromExcel" asp-controller="AppointmentReasons" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Upload Excel File:</label>
                <input type="file" class="" name="theExcel" /><br />
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="submit" value="Upload Data" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <a asp-controller="AppointmentReasons" asp-action="Create">Create</a> |
        <a asp-controller="AppointmentReasons" asp-action="Edit" class="linkClick">Edit</a> |
        <a asp-controller="AppointmentReasons" asp-action="Delete" class="linkClick">Delete</a>
    </div>
</div>
