@model MedicalOffice.Models.Condition

@{
    ViewData["Title"] = "Edit Condition";
}

<h2>Edit Condition</h2>

<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="ConditionName" class="control-label"></label>
                <input asp-for="ConditionName" class="form-control" />
                <span asp-validation-for="ConditionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" asp-controller="Lookups" asp-route-Tab="ConditionsTab">Back to Lookup List</a>
</div>

